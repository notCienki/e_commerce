<%- include('../partials/header') %>

  <div class="max-w-7xl mx-auto p-6">
    <nav class="mb-6 text-sm">
      <a href="/" class="hover:underline">Home</a>
      <span class="mx-2">/</span>
      <a href="/products" class="hover:underline">Produkty</a>
      <span class="mx-2">/</span>
      <span class="text-gray-600 dark:text-gray-400">
        <%= product.name %>
      </span>
    </nav>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      <div>
        <% if (product.images && product.images.length> 0) { %>
          <div class="mb-4">
            <img id="mainImage" src="<%= product.images[0] %>" alt="<%= product.name %>"
              class="w-full h-96 object-contain bg-gray-100 dark:bg-gray-800 rounded-lg border dark:border-gray-700">
          </div>
          <% if (product.images.length> 1) { %>
            <div class="grid grid-cols-4 gap-2">
              <% product.images.forEach((image, index)=> { %>
                <img src="<%= image %>" alt="<%= product.name %> <%= index + 1 %>"
                  class="w-full h-20 object-contain bg-gray-100 dark:bg-gray-800 rounded border dark:border-gray-700 cursor-pointer hover:opacity-75 transition"
                  onclick="document.getElementById('mainImage').src = this.src">
                <% }) %>
            </div>
            <% } %>
              <% } else { %>
                <div class="bg-gray-200 dark:bg-gray-700 h-96 rounded-lg flex items-center justify-center">
                  <span class="text-gray-500 dark:text-gray-400">Brak zdjęcia</span>
                </div>
                <% } %>
      </div>

      <div>
        <h1 class="text-3xl font-bold mb-4">
          <%= product.name %>
        </h1>

        <% if (product.description) { %>
          <p class="text-lg mb-6 text-gray-700 dark:text-gray-300">
            <%= product.description %>
          </p>
          <% } %>

            <div class="mb-6">
              <p class="text-4xl font-bold text-green-600 dark:text-green-400">
                <%= product.price.toFixed(2).replace('.', ',' ) %> zł
              </p>
            </div>

            <div class="mb-6">
              <% if (product.stock> 0) { %>
                <span
                  class="px-4 py-2 bg-green-100 text-green-800 dark:bg-green-900/30 dark:text-green-400 rounded font-semibold">
                  Dostępne: <%= product.stock %> szt.
                </span>
                <% } else { %>
                  <span
                    class="px-4 py-2 bg-red-100 text-red-800 dark:bg-red-900/30 dark:text-red-400 rounded font-semibold">
                    Brak w magazynie
                  </span>
                  <% } %>
            </div>

            <% if (product.stock> 0) { %>
              <form action="/cart/add" method="POST" class="mb-8">
                <input type="hidden" name="productId" value="<%= product._id %>">
                <input type="hidden" name="productName" value="<%= product.name %>">
                <input type="hidden" name="productPrice" value="<%= product.price %>">
                <input type="hidden" name="productImage"
                  value="<%= product.images && product.images.length > 0 ? product.images[0] : '' %>">

                <div class="flex items-center gap-4 mb-4">
                  <label for="quantity" class="font-semibold">Ilość:</label>
                  <input type="number" id="quantity" name="quantity" value="1" min="1" max="<%= product.stock %>"
                    class="w-20 px-3 py-2 border dark:border-gray-600 dark:bg-gray-700 rounded">
                </div>

                <button type="submit"
                  class="w-full md:w-auto bg-blue-600 hover:bg-blue-700 text-white font-bold py-3 px-8 rounded-lg text-lg">
                  Dodaj do koszyka
                </button>
              </form>
              <% } %>

                <% if (product.details) { %>
                  <div class="border-t dark:border-gray-700 pt-6">
                    <h2 class="text-xl font-bold mb-4">Szczegóły techniczne</h2>
                    <div class="bg-gray-50 dark:bg-gray-800 p-4 rounded-lg">
                      <pre class="whitespace-pre-wrap text-sm"><%= product.details %></pre>
                    </div>
                  </div>
                  <% } %>
      </div>
    </div>
  </div>

  <%- include('../partials/footer') %>