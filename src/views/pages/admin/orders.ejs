<%- include('../../partials/header') %>

  <div class="p-6 max-w-7xl mx-auto">
    <div class="flex justify-between items-center mb-6">
      <h1 class="text-3xl font-bold">Zarządzanie zamówieniami</h1>
      <a href="/admin"
        class="border border-gray-300 dark:border-gray-600 hover:bg-gray-100 dark:hover:bg-gray-700 font-bold py-2 px-4 rounded">
        ← Powrót do panelu
      </a>
    </div>

    <% if (typeof success !=='undefined' && success) { %>
      <div
        class="bg-green-100 dark:bg-green-900/30 border border-green-400 dark:border-green-700 text-green-700 dark:text-green-400 px-4 py-3 rounded mb-4">
        Status zamówienia zaktualizowany!
      </div>
      <% } %>

        <% if (orders.length===0) { %>
          <div class="text-center py-12 bg-white dark:bg-gray-800 rounded-lg border dark:border-gray-700">
            <p class="text-gray-600 dark:text-gray-400 text-xl">Brak zamówień w systemie</p>
          </div>
          <% } else { %>
            <div class="space-y-4">
              <% orders.forEach(order=> { %>
                <div class="bg-white dark:bg-gray-800 p-6 rounded-lg border dark:border-gray-700">
                  <div class="grid grid-cols-1 md:grid-cols-4 gap-4 mb-4">
                    <div>
                      <p class="text-sm text-gray-500 dark:text-gray-400">ID zamówienia</p>
                      <p class="font-bold">#<%= order._id %>
                      </p>
                    </div>
                    <div>
                      <p class="text-sm text-gray-500 dark:text-gray-400">Użytkownik</p>
                      <p class="font-semibold">
                        <%= order.user?.username || 'Nieznany' %>
                      </p>
                    </div>
                    <div>
                      <p class="text-sm text-gray-500 dark:text-gray-400">Data</p>
                      <p>
                        <%= new Date(order.createdAt).toLocaleDateString('pl-PL') %>
                      </p>
                    </div>
                    <div>
                      <p class="text-sm text-gray-500 dark:text-gray-400">Wartość</p>
                      <p class="font-bold text-green-600 dark:text-green-400">
                        <%= order.totalPrice.toFixed(2).replace('.', ',' ) %> zł
                      </p>
                    </div>
                  </div>

                  <div class="border-t dark:border-gray-700 pt-4 mb-4">
                    <p class="font-semibold mb-2">Produkty:</p>
                    <div class="space-y-1">
                      <% order.products.forEach(item=> { %>
                        <div class="flex justify-between text-sm">
                          <span>
                            <%= item.name %> x <%= item.quantity %>
                          </span>
                          <span>
                            <%= (item.price * item.quantity).toFixed(2).replace('.', ',' ) %> zł
                          </span>
                        </div>
                        <% }) %>
                    </div>
                  </div>

                  <div class="border-t dark:border-gray-700 pt-4 mb-4">
                    <p class="font-semibold mb-2">Dane klienta:</p>
                    <p class="text-sm">
                      <%= order.customerInfo.fullName %>
                    </p>
                    <p class="text-sm">
                      <%= order.customerInfo.email %> | <%= order.customerInfo.phone %>
                    </p>
                    <p class="text-sm">
                      <%= order.customerInfo.address %>
                    </p>
                  </div>

                  <div class="border-t dark:border-gray-700 pt-4 flex justify-between items-center">
                    <span
                      class="px-3 py-1 rounded text-sm font-semibold <%= order.status === 'open' ? 'bg-yellow-100 text-yellow-800 dark:bg-yellow-900/30 dark:text-yellow-400' : order.status === 'completed' ? 'bg-green-100 text-green-800 dark:bg-green-900/30 dark:text-green-400' : 'bg-red-100 text-red-800 dark:bg-red-900/30 dark:text-red-400' %>">
                      <%= order.status==='open' ? 'W trakcie' : order.status==='completed' ? 'Zrealizowane'
                        : 'Anulowane' %>
                    </span>

                    <form method="POST" action="/admin/orders/status/<%= order._id %>" class="flex gap-2">
                      <select name="status" class="px-3 py-1 border rounded dark:bg-gray-700 dark:border-gray-600">
                        <option value="open" <%=order.status==='open' ? 'selected' : '' %>>W trakcie</option>
                        <option value="completed" <%=order.status==='completed' ? 'selected' : '' %>>Zrealizowane
                        </option>
                        <option value="canceled" <%=order.status==='canceled' ? 'selected' : '' %>>Anulowane</option>
                      </select>
                      <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-1 rounded text-sm">
                        Aktualizuj
                      </button>
                    </form>
                  </div>
                </div>
                <% }) %>
            </div>
            <% } %>
  </div>

  <%- include('../../partials/footer') %>