<%- include('../../partials/header') %>

  <div class="p-6 max-w-7xl mx-auto">
    <div class="flex justify-between items-center mb-6">
      <h1 class="text-3xl font-bold">Zarządzanie produktami</h1>
      <div class="flex gap-4">
        <a href="/admin"
          class="border border-gray-300 dark:border-gray-600 hover:bg-gray-100 dark:hover:bg-gray-700 font-bold py-2 px-4 rounded">
          ← Powrót do panelu
        </a>
        <a href="/admin/products/add" class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
          + Dodaj produkt
        </a>
      </div>
    </div>

    <% if (typeof success !=='undefined' && success) { %>
      <div
        class="bg-green-100 dark:bg-green-900/30 border border-green-400 dark:border-green-700 text-green-700 dark:text-green-400 px-4 py-3 rounded mb-4">
        <%= success==='added' ? 'Produkt dodany pomyślnie!' : success==='updated' ? 'Produkt zaktualizowany!'
          : 'Produkt usunięty!' %>
      </div>
      <% } %>

        <div class="bg-white dark:bg-gray-800 rounded-lg border dark:border-gray-700 overflow-hidden">
          <table class="w-full">
            <thead class="bg-gray-100 dark:bg-gray-700">
              <tr>
                <th class="text-left p-4">Nazwa</th>
                <th class="text-left p-4">Cena</th>
                <th class="text-left p-4">Stan</th>
                <th class="text-left p-4">Zdjęcia</th>
                <th class="text-right p-4">Akcje</th>
              </tr>
            </thead>
            <tbody>
              <% if (products.length===0) { %>
                <tr>
                  <td colspan="5" class="text-center p-8 text-gray-500 dark:text-gray-400">
                    Brak produktów. Dodaj pierwszy produkt!
                  </td>
                </tr>
                <% } else { %>
                  <% products.forEach(product=> { %>
                    <tr class="border-t dark:border-gray-700">
                      <td class="p-4">
                        <p class="font-semibold">
                          <%= product.name %>
                        </p>
                        <p class="text-sm text-gray-500 dark:text-gray-400">
                          <%= product.description || '-' %>
                        </p>
                      </td>
                      <td class="p-4">
                        <%= product.price.toFixed(2).replace('.', ',' ) %> zł
                      </td>
                      <td class="p-4">
                        <%= product.stock %> szt.
                      </td>
                      <td class="p-4">
                        <%= product.images.length %> zdjęć
                      </td>
                      <td class="p-4 text-right">
                        <div class="flex gap-2 justify-end">
                          <a href="/admin/products/edit/<%= product._id %>"
                            class="bg-yellow-500 hover:bg-yellow-600 text-white px-3 py-1 rounded text-sm">
                            Edytuj
                          </a>
                          <form method="POST" action="/admin/products/delete/<%= product._id %>" class="inline"
                            onsubmit="return confirm('Czy na pewno usunąć ten produkt?')">
                            <button type="submit"
                              class="bg-red-600 hover:bg-red-700 text-white px-3 py-1 rounded text-sm">
                              Usuń
                            </button>
                          </form>
                        </div>
                      </td>
                    </tr>
                    <% }) %>
                      <% } %>
            </tbody>
          </table>
        </div>
  </div>

  <%- include('../../partials/footer') %>