<%- include('../../partials/header') %>

  <div class="p-6 max-w-7xl mx-auto">
    <h1 class="text-3xl font-bold mb-6">Panel Administratora</h1>

    <!-- Statystyki -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
      <div class="bg-white dark:bg-gray-800 p-6 rounded-lg border dark:border-gray-700">
        <p class="text-gray-500 dark:text-gray-400 text-sm">Produkty</p>
        <p class="text-3xl font-bold">
          <%= stats.products %>
        </p>
      </div>
      <div class="bg-white dark:bg-gray-800 p-6 rounded-lg border dark:border-gray-700">
        <p class="text-gray-500 dark:text-gray-400 text-sm">Użytkownicy</p>
        <p class="text-3xl font-bold">
          <%= stats.users %>
        </p>
      </div>
      <div class="bg-white dark:bg-gray-800 p-6 rounded-lg border dark:border-gray-700">
        <p class="text-gray-500 dark:text-gray-400 text-sm">Wszystkie zamówienia</p>
        <p class="text-3xl font-bold">
          <%= stats.orders %>
        </p>
      </div>
      <div class="bg-white dark:bg-gray-800 p-6 rounded-lg border dark:border-gray-700">
        <p class="text-gray-500 dark:text-gray-400 text-sm">Otwarte zamówienia</p>
        <p class="text-3xl font-bold text-yellow-600 dark:text-yellow-400">
          <%= stats.openOrders %>
        </p>
      </div>
    </div>

    <!-- Menu -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      <a href="/admin/products"
        class="bg-blue-600 hover:bg-blue-700 text-white p-8 rounded-lg text-center transition-colors">
        <svg class="w-16 h-16 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
            d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />
        </svg>
        <h2 class="text-2xl font-bold">Zarządzaj produktami</h2>
        <p class="mt-2">Dodawaj, edytuj i usuwaj produkty</p>
      </a>

      <a href="/admin/users"
        class="bg-green-600 hover:bg-green-700 text-white p-8 rounded-lg text-center transition-colors">
        <svg class="w-16 h-16 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
            d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
        </svg>
        <h2 class="text-2xl font-bold">Użytkownicy</h2>
        <p class="mt-2">Zarządzaj użytkownikami i uprawnieniami</p>
      </a>

      <a href="/admin/orders"
        class="bg-purple-600 hover:bg-purple-700 text-white p-8 rounded-lg text-center transition-colors">
        <svg class="w-16 h-16 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
            d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
        </svg>
        <h2 class="text-2xl font-bold">Zamówienia</h2>
        <p class="mt-2">Przeglądaj i aktualizuj status zamówień</p>
      </a>
    </div>
  </div>

  <%- include('../../partials/footer') %>