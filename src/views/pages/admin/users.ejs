<%- include('../../partials/header') %>

  <div class="p-6 max-w-6xl mx-auto">
    <div class="flex justify-between items-center mb-6">
      <h1 class="text-3xl font-bold">Zarządzanie użytkownikami</h1>
      <a href="/admin"
        class="border border-gray-300 dark:border-gray-600 hover:bg-gray-100 dark:hover:bg-gray-700 font-bold py-2 px-4 rounded">
        ← Powrót do panelu
      </a>
    </div>

    <% if (typeof success !=='undefined' && success) { %>
      <div
        class="bg-green-100 dark:bg-green-900/30 border border-green-400 dark:border-green-700 text-green-700 dark:text-green-400 px-4 py-3 rounded mb-4">
        Uprawnienia użytkownika zaktualizowane!
      </div>
      <% } %>

        <div class="bg-white dark:bg-gray-800 rounded-lg border dark:border-gray-700 overflow-hidden">
          <table class="w-full">
            <thead class="bg-gray-100 dark:bg-gray-700">
              <tr>
                <th class="text-left p-4">Nazwa użytkownika</th>
                <th class="text-left p-4">Data rejestracji</th>
                <th class="text-left p-4">Status</th>
                <th class="text-right p-4">Akcje</th>
              </tr>
            </thead>
            <tbody>
              <% users.forEach(user=> { %>
                <tr class="border-t dark:border-gray-700">
                  <td class="p-4 font-semibold">
                    <%= user.username %>
                  </td>
                  <td class="p-4">
                    <%= new Date(user.createdAt).toLocaleDateString('pl-PL') %>
                  </td>
                  <td class="p-4">
                    <% if (user.isAdmin) { %>
                      <span
                        class="px-3 py-1 rounded text-sm font-semibold bg-purple-100 text-purple-800 dark:bg-purple-900/30 dark:text-purple-400">
                        Administrator
                      </span>
                      <% } else { %>
                        <span
                          class="px-3 py-1 rounded text-sm font-semibold bg-gray-100 text-gray-800 dark:bg-gray-700 dark:text-gray-400">
                          Użytkownik
                        </span>
                        <% } %>
                  </td>
                  <td class="p-4 text-right">
                    <form method="POST" action="/admin/users/toggle-admin/<%= user._id %>" class="inline">
                      <button type="submit"
                        class="<%= user.isAdmin ? 'bg-red-600 hover:bg-red-700' : 'bg-green-600 hover:bg-green-700' %> text-white px-3 py-1 rounded text-sm">
                        <%= user.isAdmin ? 'Odbierz uprawnienia' : 'Nadaj uprawnienia' %>
                      </button>
                    </form>
                  </td>
                </tr>
                <% }) %>
            </tbody>
          </table>
        </div>
  </div>

  <%- include('../../partials/footer') %>